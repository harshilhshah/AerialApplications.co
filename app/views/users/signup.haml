.homebody
  .content.no-margin
    %h1.center User Signup
    .center
      = form_for @user do |f|
        - if @user.errors.any?
          #error_explanation
            %h2= "#{pluralize(@user.errors.count, "error")} prohibited this signup from being   registered:"
            %ul
              - @user.errors.full_messages.each do |msg|
                %li= msg
        .field
          = f.label :first_name
          %br
          = f.text_field :firstName
        .field
          = f.label :last_name
          %br
          = f.text_field :lastName
        .field
          = f.label :zip_code
          %br
          = f.text_field :zipCode
        .field
          = f.label :email
          %br
          = f.text_field :email
        .field
          = f.label :password
          %br
          = f.password_field :password
        .actions
          = f.submit 'Sign Up'