= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_Name
    %br
    = f.text_field :firstName
  .field
    = f.label :last_Name
    %br
    = f.text_field :lastName
  .field
    = f.label :zip_Code
    %br
    = f.text_field :zipCode
  .field
    = f.label :email
    %br
    = f.text_field :email
  .field
    = f.label :username
    %br
    = f.text_field :username
  .field
    = f.label :password
    %br
    = f.password_field :password
  .field
    = f.label :user_Type
    %br
    = f.collection_select :userTypeId, UserType.all, :id, :description
  .field
    = f.label :approved
    %br
    = f.check_box :approved
  .actions
    = f.submit 'Save'
