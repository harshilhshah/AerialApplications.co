      .tile-cover
      .tile-title Payments
-elsif @current_user.is_affiliate?
  .user-dash
    .dashboard
      %h2 Dashboard
      .notice-bar 
        .exclamation !
        .notice-message Please verify your email address. Click to resend verification email.
      .active-project
        %h3 Active Projects
        - if @projects.length > 0
          %table.a-1ist
            %tr
              %th Address
              %th Date Scheduled
              %th Pilot
            - @projects.each do |project|
              %tr
                %td= project.address
                %td= project.due.strftime('%m-%d-%Y')
                %td 
                  = project.get_client_name
                  %br
                  %span
                    %a Message Client
      .active-project
        %h3 New Messages
        %p No new messages
      .active-project
        %h3 Referrals
        %p.inline
          Invite a friend to join Aerial Applications, and you’ll both get $50 off your
          next project
        .button.dashboard-btn
          = link_to 'Invite Friends', ''
-else
  .user-dash
    .dashboard
      %h2 Dashboard
      .notice-bar 
        .exclamation !
        .notice-message Please verify your email address. Click to resend verification email.
      .active-project
        %h3 Active Projects
        - if @projects.length > 0
          %table.a-1ist
            %tr
              %th Address
              %th Date Scheduled
              - if @current_user.is_affiliate?
                %th Client
              - else
                %th Pilot
            - @projects.each do |project|
              %tr
                %td= project.address
                %td= project.due.strftime('%m-%d-%Y')
                %td 
                  = project.get_pilot_name
                  %br
                  %span
                    %a Message Pilot
        .button.dashboard-btn
          = link_to 'New Project', new_project_path
      .active-project
        %h3 New Messages
        %p No new messages
      .active-project
        %h3 Referrals
        %p.inline
          Invite a friend to join Aerial Applications, and you’ll both get $50 off your
          next project
        .button.dashboard-btn
          = link_to 'Invite Friends', ''