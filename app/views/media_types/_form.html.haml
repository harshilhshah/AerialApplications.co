= form_for @media_type do |f|
  - if @media_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@media_type.errors.count, "error")} prohibited this media_type from being saved:"
      %ul
        - @media_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
